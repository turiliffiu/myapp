# =============================================
# AMBIENTE
# =============================================
DEBUG=True
# True  = development (log verbosi, errori dettagliati)
# False = production  (sicurezza HTTPS attiva, log minimo)

# =============================================
# SICUREZZA
# =============================================
SECRET_KEY=your-secret-key-here-change-in-production
# Genera con: python manage.py shell -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"

ALLOWED_HOSTS=localhost,127.0.0.1
# In produzione: il tuo dominio reale, es: myapp.tuodominio.com,www.myapp.tuodominio.com

# =============================================
# DATABASE PostgreSQL
# =============================================
DB_NAME=myapp_db
DB_USER=myapp_user
DB_PASS=changeme
DB_HOST=localhost
DB_PORT=5432

# =============================================
# EMAIL (opzionale)
# =============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@myapp.com

# =============================================
# REDIS (opzionale per Celery)
# =============================================
REDIS_URL=redis://localhost:6379/0

# =============================================
# CORS (se API separata)
# =============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================
# UPLOAD FILE
# =============================================
UPLOAD_MAX_SIZE_MB=10

# =============================================
# CELERY (opzionale)
# =============================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
